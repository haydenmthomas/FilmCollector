@{
    ViewBag.Title = "Edit a Film";
    ViewBag.Head = "Film Submission";
}

@model FilmCollector.Models.FilmViewModel

<div class="text-center d-flex justify-content-center">
    <form asp-action="Update" method="post">
        <div class="form-group row">
            <label asp-for="@Model.filmsMod.Category" class="col-md-4 col-form-label">Category: </label>
            <div class="col-md-8">
                <select class="form-control" asp-for="@Model.filmsMod.Category">
                    <option value="Action/Adventure">Action/Adventure</option>
                    <option value="Comedy">Comedy</option>
                    <option value="Drama">Drama</option>
                    <option value="Family">Family</option>
                    <option value="Horror/Suspense">Horror/Suspense</option>
                    <option value="Miscellaneous">Miscellaneous</option>
                    <option value="Television">Television</option>
                    <option value="VHS">VHS</option>
                    @*This is just a test*@
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.filmsMod.Title" class="col-md-4 col-form-label">Title: </label>
            <div class="col-md-8">
                <input asp-for="@Model.filmsMod.Title" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.filmsMod.Year" class="col-md-4 col-form-label">Year: </label>
            <div class="col-md-8">
                <input asp-for="@Model.filmsMod.Year" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.filmsMod.Director" class="col-md-4 col-form-label">Director: </label>
            <div class="col-md-8">
                <input asp-for="@Model.filmsMod.Director" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.filmsMod.Rating" class="col-md-4 col-form-label">Rating: </label>
            <div class="col-md-8">
                <select class="form-control" asp-for="@Model.filmsMod.Rating">
                    <option value="G">G</option>
                    <option value="NR">NR</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                    <option value="TV-14">TV-14</option>
                    <option value="TV-PG">TV-PG</option>
                    <option value="TV-Y7">TV-Y7</option>
                    <option value="UR">UR</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.filmsMod.Edited" class="col-md-4 col-form-label">Edited? </label>
            <div class="col-md-8">
                <select asp-for="@Model.filmsMod.Edited" class="form-control">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.filmsMod.LentTo" class="col-md-4 col-form-label">Lent To: </label>
            <div class="col-md-8">
                <input type="text" asp-for="@Model.filmsMod.LentTo" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.filmsMod.Notes" class="col-md-4 col-form-label">Notes: </label>
            <div class="col-md-8">
                <textarea class="form-control" asp-for="@Model.filmsMod.Notes" rows="5" maxlength="25"></textarea>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Make Changes</button>
        </div>
        <div class="form-group">
            <form method="post" asp-action="Films">
                <button type="submit" class="btn btn-secondary">Go back to list of Films</button>
            </form>
        </div>
    </form>
</div>