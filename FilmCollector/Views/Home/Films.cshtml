@{
    ViewBag.Title = "Films";
    ViewBag.Head = "Joel Hilton's Film Collection";
}

@model IEnumerable<FilmCollector.Models.FilmSubmission>

<div class="text-center">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Category</th>
                <th scope="col">Title</th>
                <th scope="col">Year</th>
                <th scope="col">Director</th>
                <th scope="col">Rating</th>
                <th scope="col">Edited</th>
                <th scope="col">Lent To</th>
                <th scope="col">Notes</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (FilmSubmission x in Model)
            {
                <tr>
                    <td>@x.Category</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>
                    <td>
                        <form method="post" asp-action="Edit" id="@x.FilmID">
                            <input type="hidden" value="@x.FilmID" name="id" />
                            <button type="submit" class="btn btn-warning">Edit</button>
                        </form>
                    </td>
                    <td>
                        <form method="post" asp-action="Delete" asp-route-id="@x.FilmID">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <form method="post" asp-action="SubmitFilm">
        <button type="submit" class="btn btn-primary">Add New</button>
    </form>
</div>