@{
    ViewBag.Title = "Submit a Film";
    ViewBag.Head = "Film Submission";
}

@model FilmCollector.Models.FilmSubmission

<div class="text-center">

    <form asp-action="SubmitFilm" method="post">
        <div class="form-group row" mx-sm-3 mb-2>
            <label asp-for="Category" class="col-sm-2 col-form-label">Category: </label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="Category">
                    <option value="Action/Adventure">Action/Adventure</option>
                    <option value="Comedy">Comedy</option>
                    <option value="Drama">Drama</option>
                    <option value="Family">Family</option>
                    <option value="Horror/Suspense">Horror/Suspense</option>
                    <option value="Miscellaneous">Miscellaneous</option>
                    <option value="Television">Television</option>
                    <option value="VHS">VHS</option>
                </select>
            </div>
            </div>
        <div class="form-group row">
            <label asp-for="Title" class="col-sm-2 col-form-label">Title: </label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
            </div>
            </div>
        <div class="form-group row">
            <label asp-for="Year" class="col-sm-2 col-form-label">Year: </label>
            <div class="col-sm-10">
                <input asp-for="Year" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Director" class="col-sm-2 col-form-label">Director: </label>
            <div class="col-sm-10">
                <input asp-for="Director" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Rating" class="col-sm-2 col-form-label">Rating: </label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="Rating">
                    <option value="G">G</option>
                    <option value="NR">NR</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                    <option value="TV-14">TV-14</option>
                    <option value="TV-PG">TV-PG</option>
                    <option value="TV-Y7">TV-Y7</option>
                    <option value="UR">UR</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Edited" class="col-sm-2 col-form-label">Edited? </label>
            <div class="col-sm-10">
                <select asp-for="Edited" class="form-control">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="LentTo" class="col-sm-2 col-form-label">Lent To: </label>
            <div class="col-sm-10">
                <input type="text" asp-for="LentTo" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Notes" class="col-sm-2 col-form-label">Notes: </label>
            <div class="col-sm-10">
                <textarea class="form-control" asp-for="Notes" rows="5" maxlength="25"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Submit Film</button>
            </div>
        </div>
</form>

</div>